@model Recipe

<div class="card card-outline-primary m-1 p-1">
	<div class="bg-faded p-1">
		<h4>
			@Model?.RecipeCategory
			<span class="badge rounded-pill bg-primary text-white"
				  style="float:right">
				<small>@Model?.RecipeName</small>
			</span>
		</h4>
	</div>
	<div class="card-text p-1">@Model?.RecipeIngredients</div>
	<div class="card-text p-1">@Model?.RecipeInstructions</div>
</div>
