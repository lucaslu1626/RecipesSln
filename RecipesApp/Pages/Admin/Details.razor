@page "/admin/recipes/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
	<tbody>
		<tr>
			<th>ID</th>
			<td>@Recipe?.RecipeID</td>
		</tr>
		<tr>
			<th>Creator</th>
			<td>@Recipe?.RecipeCreator</td>
		</tr>
		<tr>
			<th>Recipe Category</th>
			<td>@Recipe?.RecipeCategory</td>
		</tr>
		<tr>
			<th>Recipe Name</th>
			<td>@Recipe?.RecipeName</td>
		</tr>
		<tr>
			<th>Recipe Ingredients</th>
			<td>@Recipe?.RecipeIngredients</td>
		</tr>
		<tr>
			<th>Recipe Ingredients</th>
			<td>@Recipe?.RecipeIngredients</td>
		</tr>
		<tr>
			<th>Recipe Instructions</th>
			<td>@Recipe?.RecipeInstructions</td>
		</tr>
	</tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/recipes">Back</NavLink>
@code {
	[Inject]
	public IStoreRepository? Repository { get; set; }
	[Parameter]
	public long Id { get; set; }
	public Recipe? Recipe { get; set; }
	protected override void OnParametersSet()
	{
		Recipe = Repository?.Recipes.FirstOrDefault(p => p.RecipeID == Id);
	}
	public string EditUrl => $"/admin/recipes/edit/{Recipe?.RecipeID}";
}

